# RevEarth Environment Variables
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or .env files to version control

# ============================================
# DATABASE CONFIGURATION (Required)
# ============================================
# Get these from Supabase: https://app.supabase.com/project/[project-id]/settings/database
# DATABASE_URL: Connection pooling URL (PgBouncer) - used for queries
DATABASE_URL="postgresql://postgres:[PASSWORD]@[HOST]:6543/postgres?pgbouncer=true"

# DIRECT_URL: Direct connection URL - required for Prisma migrations
DIRECT_URL="postgresql://postgres:[PASSWORD]@[HOST]:5432/postgres"


# ============================================
# AUTHENTICATION (Required)
# ============================================
# Generate BETTER_AUTH_SECRET using:
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
BETTER_AUTH_SECRET="[generate-random-base64-string-here]"

# Backend authentication URL - change to your production domain when deploying
BETTER_AUTH_URL="http://localhost:3000"

# Frontend application URL - must start with NEXT_PUBLIC_ to be available client-side
NEXT_PUBLIC_APP_URL="http://localhost:3000"


# ============================================
# EMAIL SERVICE (Optional but Recommended)
# ============================================
# If not configured, email functionality will be disabled
# Email service is required for:
# - User email verification
# - Password reset emails
# - Welcome emails

# For Gmail:
# 1. Enable 2FA in your Google Account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use: SMTP_HOST=smtp.gmail.com, SMTP_PORT=587, SMTP_SECURE=false

# For Outlook/Hotmail:
# Use: SMTP_HOST=smtp-mail.outlook.com, SMTP_PORT=587, SMTP_SECURE=false

SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password-here"
SMTP_SECURE="false"
EMAIL_FROM="noreply@revearth.com"


# ============================================
# OAUTH PROVIDERS (Optional)
# ============================================
# Uncomment and configure if you want to enable social authentication

# Google OAuth
# Get credentials: https://console.cloud.google.com/apis/credentials
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# GitHub OAuth
# Get credentials: https://github.com/settings/developers
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""


# ============================================
# APPLICATION ENVIRONMENT
# ============================================
# Automatically set by Node.js, but can be overridden
# Options: development, production, test
NODE_ENV="development"
